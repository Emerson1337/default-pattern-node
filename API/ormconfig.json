{
  "type": "mongodb",
  "host": "localhost",
  "port": 27017,
  "database": "systemindustry",
  "synchronize": true,
  "logging": false,
  "useUnifiedTopology": true,
  "entities": [
    "./src/models/*.ts"
  ],
  "migrations": [
    "./src/database/migrations/*.ts"
  ],
  "cli": {
    "migrationsDir": "./src/database/migrations"
  }
}